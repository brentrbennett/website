<p id="notice"><%= notice %></p>

<h1>Amazon Orders</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Amount</th>
      <th>Double</th>
      <th>Number</th>
      <th>Property</th>
      <th>Desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @amazon_orders.each do |amazon_order| %>
      <tr>
        <td><%= amazon_order.date %></td>
        <td><%= amazon_order.amount %></td>
        <td><%= amazon_order.double %></td>
        <td><%= amazon_order.number %></td>
        <td><%= amazon_order.property %></td>
        <td><%= amazon_order.desc %></td>
        <td><%= link_to 'Show', amazon_order %></td>
        <td><%= link_to 'Edit', edit_amazon_order_path(amazon_order) %></td>
        <td><%= link_to 'Destroy', amazon_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

